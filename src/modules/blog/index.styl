@import "../../stylus/_basic.styl"

.blog
  font-size px2rem(14)
  background-color #00c4b9
  width 100%
  min-height 100%
  top 0
  left 0
  position absolute
  .navigation
    z-index 100
    position fixed
  .content
    position fixed
    width 100%
    height 100%
    top: 0
    left: 0
    min-height 100%
    padding px2rem(30) px2rem(30) px2rem(60) px2rem(80)
    color: #fff
    .view-description
      position: relative
      font-size: px2rem(14)
      line-height: px2rem(16)
      text-align: justify
    .view-title
      position: relative
      font-weight: 500
      text-transform: uppercase
      display: inline-block
      margin: 0 px2rem(20) 0 0
    .view-description
      display: inline-block;
      font-size: px2rem(14)

@media (min-width 640px)
  .blog
    height 100%

  .navigation
    top 50%
    left px2rem(40)
    height px2rem(90)
    width px2rem(20)
    top ransform translateY(-50%)
    .dot
      position relative
      display block
      width px2rem(20)
      height px2rem(20)
      margin px2rem(10) 0
      border-radius 100%
      background-color #fff
      opacity .65
      transition all .3s ease
      cursor pointer

  .content
    box-sizing: border-box;
    .view-header
      font-size: px2rem(18)
      height px2rem(100)
      position relative
      white-space nowrap
      .view-title
        font-size: px2rem(60)
        height: px2rem(100)
        line-height: px2rem(100)

    .region-view
      height 100%
    .view-content
      width: 100%;
      height: 100%;
      position: relative;
      overflow: scroll;
      padding: 110px 0 0 0;
      top: -110px;
      box-sizing: border-box;
      .view-container
        height 100%
        overflow-x scroll
        column-count 100
        column-width px2rem(260)
        column-gap px2rem(20)
        &::-webkit-scrollbar-thumb
          border-radius px2rem(10)
          background currentColor
        &::-webkit-scrollbar
          width px2rem(6)
          height px2rem(6)
        &::-webkit-scrollbar-track
          background: linear-gradient(180deg, transparent 0, transparent 30%, currentColor 50%, transparent 70%, transparent);



